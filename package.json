{
  "name": "drop-maker",
  "version": "1.0.0",
  "description": "![](assets/img/lifehacking-player.jpg)",
  "main": "index.js",
  "scripts": {
    "start": "npm run copy",
    "copy": "cp assets/episodios/automacao-no-ios.mp3 ~/Desktop && npm run convert",
    "convert": "cd ~/Desktop && ffmpeg -ss 3 -i loop-file.webm cut.mp4 && ffmpeg -stream_loop -1 -i cut.mp4 -i automacao-no-ios.mp3 -shortest -map 0:v:0 -map 1:a:0 -y episodio-completo.mp4",
    "postconvert": "mv ~/Desktop/episodio-completo.mp4 ./ && cd ~/Desktop && rm automacao-no-ios.mp3 loop-file.webm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guiluchesi/podcast-to-social.git"
  },
